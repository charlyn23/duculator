<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="85dp"
            android:text="@string/zero"
            android:textSize="30sp"
            android:id="@+id/panel"
            />
    </LinearLayout>

    <!--//first row: c, division, multiplication, backspace-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:background="@color/black"
        android:layout_weight="1">
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/help"
            android:textSize="25sp"
            android:id="@+id/help"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="rad"
            android:textSize="25sp"
            android:id="@+id/rad"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/permutation"
            android:textSize="25sp"
            android:id="@+id/perm"
            android:onClick="buttonclick"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/openParen"
            android:textSize="25sp"
            android:id="@+id/openParen"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/closeParen"
            android:textSize="25sp"
            android:id="@+id/closeParen"
            android:onClick="buttonclick"
            />

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/modulo"
            android:textSize="25sp"
            android:id="@+id/modulo"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/clear"
            android:textSize="25sp"
            android:id="@+id/clear"
            android:onClick="buttonclick"
            />
    </LinearLayout>

    //second row: 7, 8, 9, minus
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/black"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/inv"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/inv"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/sin"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/sin"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/ln"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/ln"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/seven"
            android:textSize="25sp"
            android:background="@color/denim"
            android:id="@+id/seven"
            android:onClick="buttonclick" />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/eight"
            android:textSize="25sp"
            android:background="@color/denim"
            android:id="@+id/eight"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/nine"
            android:textSize="25sp"
            android:background="@color/denim"
            android:id="@+id/nine"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/dividedBy"
            android:textSize="25sp"
            android:id="@+id/div"
            android:onClick="buttonclick"
            />


    </LinearLayout>

    //third row: 4,5,6,+
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/black"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/pi"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/pi"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/cosine"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/cos"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/log"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/log"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/four"
            android:textSize="25sp"
            android:background="@color/denim"
            android:id="@+id/four"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/five"
            android:textSize="25sp"
            android:background="@color/denim"
            android:onClick="buttonclick"
            android:id="@+id/five"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/six"
            android:textSize="25sp"
            android:background="@color/denim"
            android:id="@+id/six"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/times"
            android:textSize="25sp"
            android:id="@+id/times"
            android:onClick="buttonclick"
            />
    </LinearLayout>

    //fourth row: 1,2,3,()
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/black"
        >
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/e"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/e"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/tan"
            android:textSize="25sp"
            android:layout_weight="1"
            android:id="@+id/tan"
            android:background="@color/greydenim"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/squareroot"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/sqrt"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/one"
            android:textSize="25sp"
            android:id="@+id/one"
            android:background="@color/denim"
            android:onClick="buttonclick"
            />
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/two"
            android:textSize="25sp"
            android:id="@+id/two"
            android:background="@color/denim"
            android:onClick="buttonclick"
            />
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/three"
            android:textSize="25sp"
            android:id="@+id/three"
            android:background="@color/denim"
            android:onClick="buttonclick"
            />
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/minus"
            android:textSize="25sp"
            android:id="@+id/minus"
            android:onClick="buttonclick"
            />

    </LinearLayout>

    //fifth row: Ans, EXP, x^y, 0, decimal, =, +
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:background="@color/black">
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/tip"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/tip"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/exp"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/exp"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/power"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/greydenim"
            android:id="@+id/power"
            android:onClick="buttonclick"
            />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/zero2"
            android:textSize="25sp"
            android:layout_weight="1"
            android:id="@+id/zero"
            android:background="@color/denim"
            android:onClick="buttonclick"
            />
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:text="@string/point"
            android:textSize="25sp"
            android:layout_weight="1"
            android:background="@color/denim"
            android:id="@+id/point"
            android:onClick="buttonclick"
            />
        />

        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/equals"
            android:textSize="25sp"
            android:background="@color/greydenim"
            android:id="@+id/equals"
            android:onClick="buttonclick"
            />
        />
        <Button
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="@string/plus"
            android:textSize="25sp"
            android:id="@+id/plus"
            android:onClick="buttonclick"
            />
    </LinearLayout>

</LinearLayout>
